{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": ["src/**/*", "src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "stories", ".storybook"]
}
